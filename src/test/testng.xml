<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="E2E Suite" parallel="classes" thread-count="4">

    <listeners>
        <listener class-name="listeners.TestListener"/>
    </listeners>

    <test name="UI Tests">
        <classes>
            <class name="ui_tests.UiTests"/>
        </classes>
    </test>

    <test name="API Tests">
        <classes>
            <class name="api_tests.ApiTests"/>
        </classes>
    </test>

</suite>
